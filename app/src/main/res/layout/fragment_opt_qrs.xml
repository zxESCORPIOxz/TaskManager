<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_megadark"
    tools:context=".Fragment.opt_qrs">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ctmenu"/>



    <LinearLayout
        android:id="@+id/ctmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivlector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_semibold"
            app:icon="@drawable/ic_scan_qr"
            app:iconGravity="top"
            app:iconSize="50dp"
            app:iconTint="@color/white"
            app:iconPadding="5dp"
            android:text="Escaner"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray_dark"
            android:elegantTextHeight="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivhistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_semibold"
            app:icon="@drawable/ic_history_qr"
            app:iconGravity="top"
            app:iconSize="50dp"
            app:iconTint="@color/white"
            app:iconPadding="5dp"
            android:text="Historial"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray_dark"
            android:elegantTextHeight="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivcreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_semibold"
            app:icon="@drawable/ic_create_qr"
            app:iconGravity="top"
            app:iconSize="50dp"
            app:iconTint="@color/white"
            app:iconPadding="5dp"
            android:text="Generar"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray_dark"
            android:elegantTextHeight="true"
            />
    </LinearLayout>

</RelativeLayout>